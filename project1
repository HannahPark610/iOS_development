#include <stdio.h>
#include <string.h>

int main()
{
    char userid[8][6]={"user1","user2","user3","user4","user5","user6","user7","user8"};
    char password[8][10]={"password1","password2","password3","password4","password5","password6","password7","password8"};
    char u[8][6];
    char p[8][10];
    int n=1,a,b;
    printf("\nEnter USER ID and PASSWORD below (You have only three chances to enter)");
    while(n<=3)
    {
        
        printf("\nUSER ID: ");
        scanf("%s",u);
        printf("\nPASSWORD: ");
        scanf("%s",p);
        
        a=strcmp(u,userid);
        b=strcmp(p,password);
        
        if(a==0 && b==0)
        {
            printf("\nYou have logged in successfully.\n");
            break;
        }
        else
        {
            printf("\nWrong PASSWORD and/or USER ID. Now you have % d more chance/s.",3-n);
        }
        n++;
    }
    if(n==4)
        printf("\nYou can't log in.\n");
}

