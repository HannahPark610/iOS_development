#include <stdio.h>

typedef struct student1
{
    char userName[50];
    char passWord[10];
    int studentId;
    char firstName[20];
    char lastName[20];
    char gender[5];
    int grade;
    char courseId[50];
    int mark;
    char address[100];
    int admission;
}student1;

student1 = {"user1", "password1"};

int main()
{
	printf("\nusername : %s",student1.userName);
    printf("\npassword : %s",student1.passWord);
	return 0;
}





----------------------------------------------------------------------------------------------------------------------------------------------------

#include <stdio.h>

struct student1
{
    char username[10];
    int password;
    
}*ptr[10];

int main()
{
    int i;
    
    printf("************************************************************\nPlease enter your account to login:\n************************************************************");
    for(i=0;i<3;i++)
    {
        ptr[i] = (struct student1 *) malloc(sizeof(struct student1));
        
        printf("\nUsername : ");
        scanf("%s",&ptr[i]->username);
        printf("\nPassword : ");
        scanf("%d",&ptr[i]->password);
    }
    
    for(i=0;i<3;i++)
    {
        printf("\nUsername : %s",ptr[i]->username);
        printf("\nPassword : %d",ptr[i]->password);
    }
    
    return(0);
}
