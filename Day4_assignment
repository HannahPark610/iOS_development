#include<stdio.h>

int main()
{
    int number;
    
    printf("Enter your number: ");
    scanf("%d\n", &number);
    
    if(number % 2 == 0)
    {
        printf("%d is even number.", number);
    }else{
        printf("%d is odd number.", number);
    }
    
    if(number % 3 == 0)
    {
        printf("The number divided of 3 : \n");
    }
    if else(number % 7 == 0)
    {
        printf("The number divided of 7 : \n");
    }
}    
