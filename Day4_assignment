=======================================
problem 4.
=======================================
    
#include <stdio.h>

int main(int argc, const char * argv[]) {
    
    int num1, num2;
    int sum, difference, product, modulo;
    float quotient;

    printf("Enter First Number: ");
    scanf("%d", &num1);
    printf("Enter Second Number: ");
    scanf("%d", &num2);
    
    sum = num1 + num2;
    difference = num1 - num2;
    product = num1 * num2;
    quotient = (float)num1 / num2;
    modulo= num1 % num2;
    
    printf("%d (+) %d %d\n", num1, num2, sum);
    printf("%d (-) %d %d\n", num1, num2, difference);
    printf("%d (*) %d %d\n", num1, num2, product);
    printf("%d (/) %d %f\n", num1, num2, quotient);
    printf("%d (%) %d %d\n", num1, num2, modulo);

    
    return 0;
}


=======================================
problem 5-1.
=======================================

#include <stdio.h>
 
int main()
{
    
    int i, j, k;
    
    printf("Enter number between 5, 10: \n");
    scanf("%d", &i);
    
    for( j = 1; j <= i; j++ )
    {
       for( k = 1; k <= j; k++ )
         printf("*");
    
       printf("\n");
    }
    
    return 0;
}

=======================================
problem 5-1(2).
=======================================

#include <stdio.h>
 
int main(int argc, const char * argv[])
{
    
    int num;
    int min = 5;
    int max = 10;
    
    for(num=min+1; num<=min; num++)
    {
        for(min=1; min <= max; min++)
        printf("*", &num);
    
        printf("\n");
    }
    return 0;
}

=======================================
problem 5-2.
=======================================

#include <stdio.h>
int main()
{
    int i, j, rows;

    printf("Enter number of rows: ");
    scanf("%d",&rows);

    for(i=1; i<=rows; ++i)
    {
        for(j=1; j<=i; ++j)
        {
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}

=======================================
problem 5-3.
=======================================


#include<stdio.h>

int main()
{
    int rows, i, j, space;

    printf("Enter number of rows: ");
    scanf("%d",&rows);

    for(i=rows; i>=1; --i)
    {
        for(space=0; space < rows-i; ++space)
            printf("  ");

        for(j=i; j <= 2*i-1; ++j)
            printf("* ");

        for(j=0; j < i-1; ++j)
            printf("* ");

        printf("\n");
    }

    return 0;
}


=======================================
problem 6.
=======================================

#include <stdio.h>
 
int main()
{
   int x, y, temp;
 
   printf("Enter the value of x and y\n");
   scanf("%d%d", &x, &y);
 
   printf("Before Swapping\nx = %d\ny = %d\n",x,y);
 
   temp = x;
   x    = y;
   y    = temp;
 
   printf("After Swapping\nx = %d\ny = %d\n",x,y);
 
   return 0;
}

