void swap(int array[], int a, int b)
{
    int temp = array[a];
    array[a] = array[b];
    array[b] = temp;
}

void reverseRecursive(int a[], int begin, int end)
{
    
    if ( begin < end )
    {
        swap(a, begin, end);
        reverseRecursive(a, begin+1, end-1);
    }
}

void reverseLoop(int a[], int begin, int end)
{
    for(int i = begin; i<(begin+end)/2; ++i)
    {
        swap(a,i,end-i);
    }
}
